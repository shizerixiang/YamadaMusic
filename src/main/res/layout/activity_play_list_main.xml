<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/play_list_under_line">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@color/activity_main_bg"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/activity_main_tab_text"
            android:text="@string/play_list_title"
            android:id="@+id/play_list_title"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.1"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/play_list_clear"
            android:background="@android:color/transparent"
            android:text="@string/play_list_clear"
            android:id="@+id/play_list_clear"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#fff"
        android:dividerHeight="0.1dp"
        android:divider="@color/play_list_under_line"
        android:scrollbars="none"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="0.1dp"
        android:id="@+id/play_list_list_view" />

</RelativeLayout>