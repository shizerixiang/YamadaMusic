<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/my_music_index_local_item_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:focusable="false"
        android:gravity="center"
        android:text="@string/number"
        android:textAlignment="center"
        android:textColor="@color/index_list_divider"
        android:textSize="16sp"/>

    <include layout="@layout/local_item_music_title" />

    <ImageButton
        android:id="@+id/my_music_local_item_action"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_weight="0.2"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/add_play_list"
        android:focusable="false"
        android:scaleType="fitCenter"
        android:src="@drawable/menu_icon_black_n"/>

</LinearLayout>