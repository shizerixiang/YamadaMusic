<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_under_desc"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="4"
    android:orientation="vertical"
    android:paddingTop="3dp"
    tools:showIn="@layout/activity_main_under">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/main_under_music_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:text="@string/main_under_music_name"
            android:textColor="@color/under_text_color"
            android:textSize="14sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/main_under_singer_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="@string/main_under_singer_name"
        android:textColor="@color/under_text_color"
        android:textSize="12sp" />

</LinearLayout>